@{
    ViewBag.Title = "Mine Børn";
}
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<script type="text/javascript" src="~/Scripts/myChildren.js"></script>

<div class="containerChildren">
    <div class="leftContainer">
        <div class="buttonView">
            <div data-toggle="modal" data-target="#add-child-modal" class="add-child-button">
                @Html.Partial("~/Views/PartialViews/AddButton.cshtml", new ViewDataDictionary { { "add-text", "AddChild" } })
            </div>
        </div>
        <div class="pendingActivitiesBox">
            @Html.Partial("~/Views/PartialViews/PendingActivities.cshtml")
        </div>
    </div>

    <div class="tabsBox">
        <table class="table headline table-responsive entityDetailTable">
            <tr>
                <th><span data-locale data-apply="text" data-key="MyChildren"></span></th>
            </tr>
        </table>
        <table class="table tasksTable table-striped">
            <thead class="childrenHeader">
                <tr>
                    <th width="6%"><span data-locale data-apply="text" data-key="Status"></span></th>
                    <th width="140px"><span data-locale data-apply="text" data-key="NumberOfActivites"></span></th>
                    <th width=""><span data-locale data-apply="text" data-key="Name"></span></th>
                    <th width="170px"><span data-locale data-apply="text" data-key="CPR"></span></th>
                    <th width=""><span data-locale data-apply="text" data-key="Responsible"></span></th>
                    <th width="200px"><span data-locale data-apply="text" data-key="NextDeadline"></span></th>
                </tr>
            </thead>
            <tbody id="allMyChildren"></tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="add-child-modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4><span data-locale data-apply="text" data-key="AddChild"></span></h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="title"><span data-locale data-apply="text" data-key="ChildName"></span></label>
                        <input type="text" class="form-control" id="child-name" placeholder="">
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="add-child" class="btn btn-default"><span data-locale data-apply="text" data-key="Add"></span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>