 <!--Modal For Commenting -->
<div class="modal fade" id="addNewCaseTask" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title TasksWNoteheading">
                    <span data-locale data-apply="text" data-key="CreateNewTask">Create New Task</span>
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="taskCaseLabel"><span data-locale data-apply="text" data-key="Title">Title</span></label>
                        <input type="text" class="form-control" id="taskCaseLabel" autofocus>
                    </div>
                    <div class="form-group" id="rolesContent">
                        <label for="taskCaseRoles">Roles</label>
                        <select class="form-control" id="roles"></select>
                    </div>
                    <div class="form-group">
                        <label for="taskCaseDescription"><span data-locale data-apply="text" data-key="Description">Description</span></label>
                        <textarea class="form-control" rows="3" id="taskCaseDescription"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="taskAdd" class="instanceAdd"><span data-locale data-apply="text" data-key="Add">Add</span></button>
            </div>
        </div>
    </div>
</div>
<!-- End Modal Commenting-->