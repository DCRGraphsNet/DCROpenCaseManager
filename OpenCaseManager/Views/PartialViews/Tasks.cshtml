    #collapse-icon{
        cursor: pointer;
    }

    .hoverInfo {
        position: relative;
        display: inline-block;
    }

    .hoverInfo .hoverInfoText {
        visibility: hidden;
        width: 120px;
        font-size: 14px;
        background-color: #EFEFEF;
        color: #4a4a4a;
        padding: 10px;
        text-align: start;
        border-radius: 2px;
        position: absolute;
        z-index: 1;
        top: -5px;
        left: 140%;
    }

        .hoverInfo .hoverInfoText::after {
            content: "";
            position: absolute;
            top: 25%;
            right: 100%;
            margin-top: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: transparent #EFEFEF transparent transparent;
        }

    .hoverInfo:hover .hoverInfoText {
        visibility: visible;
    }

</style>

