<style>
    .containerChildren {
        display: flex;
        flex-direction: column;
        margin: 40px 60px 0px 60px;
    }

    .leftContainer {
        width: 230px;
        margin: 10px;
    }

    .childrenPage {
        display: flex;
        flex-direction: row;
    }

    .children{
        max-width: 100vw;
        flex-grow: 1;
        margin-left: 6vw;
        margin-right: 8%;
    }

    .childrenHeader {
        background: #9C1A5E;
        color: #fff;
        font-weight: lighter;
        margin-bottom: 20px;
    }
    .buttonView {
        align-items: flex-end;
        margin-top: -7%;
        margin-bottom: 25px;
    }

    .headline {
        color: #4a4a4a;
        font-size: xx-large;
        padding: 0px 8px 8px 0px;
        font-weight: bold;
        margin-top: 0.3%;
        margin-bottom: 3%;
    }
</style>
@{
    ViewBag.Title = "Home";
}
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<script type="text/javascript" src="~/Scripts/home.js"></script>

<div class="containerChildren">
    <div class="childrenPage">
        <div class="leftContainer">
            <div class="buttonView">
                <div data-toggle="modal" data-target="#add-child-modal" class="add-child-button">
                    @Html.Partial("~/Views/PartialViews/AddButton.cshtml", new ViewDataDictionary { { "add-text", "Tilføj barn" } })
                    </div>
                </div>
                @Html.Partial("~/Views/PartialViews/PendingActivities.cshtml")
            </div>
        <div class="children">
            <h1 class="headline">Mine Børn</h1>
            <table class="table tasksTable table-striped">
                <thead class="childrenHeader">
                    <tr>
                        <th width="2%">Status</th>
                        <th width="6%">Antal aktiviteter</th>
                        <th width="8%">Navn</th>
                        <th width="8%">CPR-nr</th>
                        <th width="8%">Ansvarlig</th>
                        <th width="12%">Næste Deadline</th>
                    </tr>
                </thead>
                <tbody id="allMyChildren"></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="add-child-modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Tilføj barn</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="title">Navn på barn</label>
                        <input type="text" class="form-control" id="child-name" placeholder="Barnets navn">
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="add-child" class="btn btn-default">Tilføj</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>