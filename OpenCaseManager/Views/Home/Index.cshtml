
@{
    ViewBag.Title = "Home";
}
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-multiselect.js"></script>

@Html.Partial("~/Views/PartialViews/TasksWithNote.cshtml")

<div class="row tableDataRow">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <!-- Trigger the modal with a button -->
        <h4 class="instancesHeading">
            <span data-locale data-apply="text" data-key="Instances">Instances</span> <button type="button" class="btn addNewInstance" data-toggle="modal" data-target="#addNewInstance">
                <span><img src="~/Content/Images/addicon.png"></span>
            </button>
        </h4>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="trStyleClass">
                        <th><span data-locale data-apply="text" data-key="Title">Title</span> </th>
                    </tr>
                </thead>
                <tbody id="myInstances"></tbody>
            </table>
        </div>
    </div><!-- Cols Div End -->
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <h4 class="tasksHeading"><span data-locale data-apply="text" data-key="Tasks">Tasks</span></h4>
        <div class="table-responsive" style="border:none">
            @Html.Partial("~/Views/PartialViews/Tasks.cshtml")
        </div>
    </div><!-- Cols Div End -->
</div><!-- Row End -->
<!-- Modal -->
<div class="modal fade" id="addNewInstance" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title instanceModalHeading"><span data-locale data-apply="text" data-key="AddInstance">Add Instance</span></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="instanceTitle"><span data-locale data-apply="text" data-key="Title">Title</span>:</label>
                        <input type="text" class="form-control" id="instanceTitle">
                    </div>
                    <div class="form-group">
                        <label for="instanceProcesses"><span data-locale data-apply="text" data-key="Processes">Processes</span></label>
                        <select class="form-control" id="instanceProcesses"></select>
                    </div>
                    <div class="rolesBlock" id="userRoles">
                    </div>
                </form>
            </div>
            <!-- modal Footer -->
            <div class="modal-footer">
                <button type="button" id="createInstance" class="instanceAdd"><span data-locale data-apply="text" data-key="Add">Add</span></button>
            </div>
        </div>
    </div>
</div><!-- Modal End-->
<script src="~/Scripts/task.js"></script>
<script type="text/javascript" src="~/Scripts/home.js"></script>