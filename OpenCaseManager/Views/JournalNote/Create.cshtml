
@{
    ViewBag.Title = "CreateJournalNote";
    var date = DateTime.Now.ToString("dd/MM/yyyy");
}
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<style>
    header {
        display: none;
    }

    .footer {
        display: none;
    }
</style>

<link rel="stylesheet" href="~/node_modules/trumbowyg/dist/ui/trumbowyg.min.css">

<link type="text/css" rel="stylesheet" href="~/Content/journalnote.css" />

<form class="form-create-journal-note">
    <h3>Opret journalnotat</h3>
    <input type="text" placeholder=" Titel" id="input-journal-title" />
    <label class="actual-date" value="@date">Oprettelsesdato: <span id="dateLabel" name="dateLabel"> @date </span></label>
    <!--<a data-toggle="modal" data-target="#changeDate">Ændr hændelsesdato</a>-->
    <div class="change-date-div"><label id="change-date-label" class="hideLabel">Hændelsesdato: </label><input type="text" class="change-date-link" placeholder="Ændr hændelsesdato" id="datepicker" autocomplete="off" /></div>
    <textarea id="input-journal-note" placeholder="Skriv journalnotat her..."></textarea>
    <div class="journalNotatButtons">
        <button class="cancel-journal-note-button" onclick="closeJournalNotatWindow();">Annuller</button>
        <button class="add-journal-note-button">Opret</button>
    </div>
</form>
