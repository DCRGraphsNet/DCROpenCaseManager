
@{
    ViewBag.Title = "CreateJournalNote";
    var date = DateTime.Now.ToString("dd/MM/yyyy");
}
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<style>
    header {
        display: none;
    }
</style>

<link rel="stylesheet" href="~/node_modules/trumbowyg/dist/ui/trumbowyg.min.css">

<link type="text/css" rel="stylesheet" href="~/Content/journalnote.css" />
<form class="form-create-journal-note">
    <h2>Create Journal Note</h2>
    <label>Title</label>
    <input type="text" id="input-journal-title" />
    <label value="@date">Date: <span id="dateLabel" name="dateLabel"> @date </span></label>
    <a data-toggle="modal" data-target="#changeDate">Edit date</a>
    <label>Note</label>
    <textarea id="input-journal-note"></textarea>
    <button class="btn-create add-journal-note-button">Create</button>
</form>

<div class="modal fade" id="changeDate" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title instanceModalHeading"><span data-locale data-apply="text" data-key="changeDate">Change Date</span></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="instanceTitle"><span data-locale data-apply="text" data-key="Date">Date</span>:</label>
                        <input type="text" class="form-control" id="datepicker" />
                    </div>
                </form>
            </div>
            <!-- modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn-update-date" id="updateDate" data-toggle="modal" data-target="#changeDate" onclick="changedate('datepicker','dateLabel')"><span data-locale data-apply="text" data-key="changeDate">Change Date</span></button>
            </div>
        </div>
    </div>
</div><!-- Modal End-->

<script src="~/node_modules/trumbowyg/dist/trumbowyg.min.js"></script>
<script src="~/node_modules/trumbowyg/dist/plugins/upload/trumbowyg.cleanpaste.min.js"></script>
<script src="~/node_modules/trumbowyg/dist/plugins/upload/trumbowyg.pasteimage.min.js"></script>
<script>
    // Doing this in a loaded JS file is better, I put this here for simplicity
</script>
<script src="~/Scripts/journalNote.js" type="text/javascript"></script>

